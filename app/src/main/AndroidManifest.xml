<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.graduationproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".login.LoginSession"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".widget.WidgetConfigActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>

        <receiver android:name=".widget.HomeSurveyWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/home_survey_widget_info" />
        </receiver>

        <activity
            android:name=".community.CommunityMainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".mainActivityViwePager.moreViewActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".UploadedFormEditableActivity" />
        <activity android:name=".result.IndividualResultActivity" />
        <activity android:name=".result.ResultActivity" /> <!-- <activity android:name=".form.BaseFormActivity" /> -->
        <activity android:name=".form.FormActivity" />
        <activity android:name=".offlineform.OfflineFormActivity" />
        <activity android:name=".login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".service.WordleClickedActivity" />
        <activity
            android:name=".service.ServiceTabActivity"
            android:label="@string/title_activity_service_tab"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ServiceSelectActivicy" />

        <service android:name=".service.MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".widget.WidgetRemoteViewsService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />
    </application>

</manifest>