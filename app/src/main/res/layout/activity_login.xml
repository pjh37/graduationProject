<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:id="@+id/parentLayout"
    android:background="@drawable/login_background"
    tools:context=".login.LoginActivity">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
       />

    <LinearLayout
        android:id="@+id/autoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/sign_in_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="자동 로그인"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/chkAutoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:textColor="#FF696969"
        android:background="#FFF"
        android:layout_marginTop="170dp"
        android:drawableLeft="@drawable/ic_exit"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btnGoSurvey"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:onClick="onClick"
        android:background="@drawable/normal_border"
        android:backgroundTint="#33F8F8F8"
        android:drawableTop="@drawable/survey"
        android:text="설문조사"
        android:paddingTop="50dp"
        android:elevation="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.2"
        />
    <Button
        android:id="@+id/btnGoCommunity"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:onClick="onClick"
        android:background="@drawable/normal_border"
        android:backgroundTint="#33F8F8F8"
        android:drawableTop="@drawable/community"
        android:text="커뮤니티"
        android:paddingTop="50dp"
        android:elevation="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.8"
        />

</androidx.constraintlayout.widget.ConstraintLayout>