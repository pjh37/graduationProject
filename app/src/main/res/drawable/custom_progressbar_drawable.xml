<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="270"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="270" >

    <shape
        android:shape="ring"
        android:useLevel="true" >
        <gradient
            android:centerY="0.5"
            android:endColor="#40DB46"
            android:startColor="#40DB46"
            android:type="sweep"
            android:useLevel="true" />
    </shape>

</rotate>